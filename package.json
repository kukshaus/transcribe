{
  "name": "transcriber",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "start:prod": "node scripts/setup-database.js && npm start",
    "db:setup": "node scripts/setup-database.js",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "setup": "cross-env YOUTUBE_DL_SKIP_PYTHON_CHECK=1 npm install && npm run type-check",
    "postinstall": "echo YouTube DL setup complete",
    "db:cleanup": "node scripts/cleanup-database.js",
    "db:cleanup:confirm": "node scripts/cleanup-database.js --confirm",
    "version:patch": "npm version patch --no-git-tag-version && npm run version:update",
    "version:minor": "npm version minor --no-git-tag-version && npm run version:update",
    "version:major": "npm version major --no-git-tag-version && npm run version:update",
    "version:update": "node scripts/update-version.js",
    "version:show": "node -e \"console.log('App Version:', require('./lib/version.ts').getVersionString())\""
  },
  "dependencies": {
    "@auth/mongodb-adapter": "^3.10.0",
    "@stripe/stripe-js": "^7.8.0",
    "@types/marked": "^5.0.2",
    "@types/node": "^20",
    "@types/node-fetch": "^2.6.7",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.16",
    "lucide-react": "^0.292.0",
    "marked": "^16.2.0",
    "mongodb": "^6.0.0",
    "mongoose": "^8.0.0",
    "next": "14.0.0",
    "next-auth": "^4.24.11",
    "node-fetch": "^3.3.2",
    "openai": "^4.0.0",
    "postcss": "^8.4.31",
    "react": "^18",
    "react-dom": "^18",
    "stripe": "^18.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "youtube-dl-exec": "^2.4.13"
  },
  "devDependencies": {
    "eslint": "^8",
    "eslint-config-next": "14.0.0"
  }
}
